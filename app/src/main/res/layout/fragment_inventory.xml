<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".InventoryFragment">

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/headers"
    android:layout_marginTop="65dp"
    android:layout_marginHorizontal="10dp"
    android:background="@color/white"
    >

    <TextView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight=".50"
        android:layout_marginEnd="10dp"
        android:textColor="#FF0000"
        android:text="Barcode and Description"
        />

    <TextView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight=".15"
        android:layout_marginEnd="10dp"
        android:textColor="#FF0000"
        android:text="System"
        />
    <TextView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight=".15"
        android:textColor="#FF0000"
        android:text="Scanned"/>



</LinearLayout>


<ScrollView
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:layout_below="@+id/headers"
    android:layout_marginBottom="100dp"
    android:background="@color/white"
    android:layout_marginHorizontal="10dp"
    >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/inventory"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight=".55"
                android:layout_marginEnd="10dp"
                android:textColor="#000000"
                />
            <TextView
                android:id="@+id/inventory_sqty"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight=".15"
                android:layout_marginEnd="10dp"
                android:textColor="#000000"
                />
            <TextView
                android:id="@+id/inventory_scanned"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight=".15"
                android:textColor="#000000"/>
        </LinearLayout>


    </RelativeLayout>

</ScrollView>

    <Button
        android:id="@+id/sendinven_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        android:background="@drawable/rounded"
        android:elevation="6dp"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="40dp"
        android:text="Send Report To Server" />

</RelativeLayout>