<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:tools="http://schemas.android.com/tools"
android:layout_width="match_parent"
android:layout_height="match_parent"
tools:context=".ReleaseFragment">
    <TextView
        android:id="@+id/view_release"
        android:layout_width="match_parent"
        android:layout_marginHorizontal="10dp"
        android:layout_height="200dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="70dp"
        android:background="@drawable/inputbackground"
        android:elevation="6dp"
        android:text="Scan a Code"
        android:textSize="15dp"
        android:padding="15dp"
        android:textColor="#000000"/>

    <EditText
        android:id="@+id/releasing_user"
        android:layout_width="270dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/view_release"
        android:inputType="text"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        android:hint="User"
        android:padding="10dp"
        android:background="@drawable/inputbackground"
        />

    <EditText
        android:id="@+id/releasing_destination"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="70dp"
        android:layout_alignTop="@+id/releasing_user"
        android:inputType="text"
        android:layout_alignParentStart="true"
        android:layout_marginStart="30dp"
        android:hint="Destination"
        android:layout_centerHorizontal="true"
        android:padding="10dp"
        android:background="@drawable/inputbackground"
        />
    <EditText
        android:id="@+id/releasing_qty"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="70dp"
        android:layout_alignTop="@+id/releasing_user"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="30dp"
        android:inputType="text"
        android:hint="Quantity"
        android:padding="10dp"
        android:background="@drawable/inputbackground"
        />

    <EditText
        android:id="@+id/input_releasing"
        android:layout_width="270dp"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/releasing_destination"
        android:layout_marginTop="70dp"
        android:layout_centerHorizontal="true"
        android:inputType="text"
        android:hint="Barcode"
        android:padding="10dp"
        android:background="@drawable/inputbackground"
        />


</RelativeLayout>